<%= render :partial => "shared/searchbar" %>

<div id="queries">
	<div id="query_main">
		<h1>Event Queries</h1>
		<table cellpadding="0" cellspacing="0">
			<thead>
				<tr>
					<th class="tweets"></th>
					<th class="text">Text</th>
					<th class="date">Date</th>
					<th class="location">Location</th>
				</tr>
			</thead>
			<tbody>
				<% for @query in @queries %>
					<tr>
						<td class="tweets">
							<% form_remote_tag :url => { :action => "query_tweets", :id => @query } do %>
								<%= submit_tag "Tweets" %>
							<% end %>
						</td>
						<td class="text"><%= @query.text %></td>
						<td class="date"><%= @query.query_date.strftime("%Y-%m-%d") %></td>
						<td class="location"><%= @query.location %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	
	<div id="query_tweets">
		<%= render( :partial => "query_tweets", :object => @queries.first.tweets ) %>
	</div>
</div>